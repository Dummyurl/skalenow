<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cccc">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Please specify a search criteria"
                android:textColor="#000000"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnviewcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/txt"
                android:text="View Cart"
                android:textAllCaps="false"
                android:background="@drawable/buttonovereffect"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="Product Code:"
                    android:textColor="#000000"
                    android:textSize="13dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".80">

                <EditText
                    android:id="@+id/edt_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextdesign"
                    android:padding="4dp"
                    android:text="" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="Product Name:"
                    android:textColor="#000000"
                    android:textSize="13dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".80">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextdesign"
                    android:padding="4dp"
                    android:text="" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="Weight\nBetween:"
                    android:textColor="#000000"
                    android:textSize="13dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".80">

                <EditText
                    android:id="@+id/edtweightfrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.5"
                    android:background="@drawable/edittextdesign"
                    android:padding="4dp"
                    android:text="" />

                <TextView
                    android:id="@+id/txtweightand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/edtweightfrom"
                    android:text="and"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edtweightto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtweightand"
                    android:layout_weight="0.5"
                    android:background="@drawable/edittextdesign"
                    android:padding="4dp"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".20">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:singleLine="false"
                    android:text="Rel. Date\nBetween:"
                    android:textColor="#000000"
                    android:textSize="13dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".80">

                <EditText
                    android:id="@+id/edtreldatefrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.5"
                    android:background="@drawable/edittextdesign"
                    android:padding="4dp"
                    android:text="Select a Date"
                    android:textAllCaps="false"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txtdateand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/btnreldatefrom"
                    android:text="and"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edtreldateto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtdateand"
                    android:layout_weight="0.5"
                    android:background="@drawable/edittextdesign"
                    android:padding="4dp"
                    android:text="Select a Date"
                    android:textAllCaps="false"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/edtcleardate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edittextdesign"
                android:padding="4dp"
                android:text="Clear Dates"
                android:textAllCaps="false"
                android:textSize="13dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:button="@drawable/custom_checkbox"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Project"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <CheckBox
                    android:id="@+id/check_Categories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:button="@drawable/custom_checkbox"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Categories"
                    android:textColor="#000000"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_product_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:button="@drawable/custom_checkbox"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Product Types"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <CheckBox
                    android:id="@+id/check_series"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:button="@drawable/custom_checkbox"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Series"
                    android:textColor="#000000"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:button="@drawable/custom_checkbox"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Collections"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <CheckBox
                    android:id="@+id/check_sub_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:button="@drawable/custom_checkbox"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Sub Collection"
                    android:textColor="#000000"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btnsavesearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25"
                android:background="@drawable/buttonovereffect"
                android:text="Save Search"
                android:textAllCaps="false"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnloadsearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/buttonovereffect"
                android:text="Load Product"
                android:textAllCaps="false"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnfindproduct"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/buttonovereffect"
                android:text="Find Product"
                android:textAllCaps="false"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btncancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/buttonovereffect"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>